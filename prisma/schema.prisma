datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5432/postgres"
}

model Station {
  id  Int     @id @default(autoincrement())
  uri String  @unique
  mac String? @unique

  name String?
  info String?

  data Data[]
}

model Data {
  id   Int      @id @default(autoincrement())
  time DateTime

  temperature Float?
  humidity    Float?
  pressure    Float?
  quality     Float?

  station   Station @relation(fields: [stationId], references: [id])
  stationId Int
}
