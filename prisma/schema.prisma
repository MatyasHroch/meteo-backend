datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5432/postgres"
}

model Station {
  id  Int     @id @default(autoincrement())
  uri String? @unique
  mac String  @unique

  name String?
  info String?

  data Data[]
}

model Data {
  id   Int      @id @default(autoincrement())
  time DateTime
  mac  String

  temperature Float?
  humidity    Float?
  pressure    Float?
  quality     Float?
  rain        Float?
  heat        Float?

  station Station @relation(fields: [mac], references: [mac])
}
