// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5432/postgres"
}

model Station {
  id  Int     @id @default(autoincrement())
  uri String? @unique
  mac String  @unique

  name String?
  info String?

  data     Data[]
  meanData meanData[]
}

model Data {
  id   Int      @id @default(autoincrement())
  time DateTime
  mac  String

  temperature Float?
  humidity    Float?
  pressure    Float?
  quality     Float?
  rain        Float?
  heat        Float?

  station Station @relation(fields: [mac], references: [mac])
}

model meanData {
  id   Int      @id @default(autoincrement())
  time DateTime
  mac  String

  maxTemperature     Float?
  minTemperature     Float?
  maxTemperatureTime DateTime?
  minTemperatureTime DateTime?
  temperature        Float?

  maxHumidity     Float?
  minHumidity     Float?
  maxHumidityTime DateTime?
  minHumidityTime DateTime?
  humidity        Float?

  maxPressure     Float?
  minPressure     Float?
  maxPressureTime DateTime?
  minPressureTime DateTime?
  pressure        Float?

  maxQuality     Float?
  minQuality     Float?
  maxQualityTime DateTime?
  minQualityTime DateTime?
  quality        Float?

  maxRain     Float?
  minRain     Float?
  maxRainTime DateTime?
  minRainTime DateTime?
  rain        Float?

  maxHeat     Float?
  minHeat     Float?
  maxHeatTime DateTime?
  minHeatTime DateTime?
  heat        Float?

  station Station @relation(fields: [mac], references: [mac])
}
